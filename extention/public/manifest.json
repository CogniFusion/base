{
  "manifest_version": 3,
  "name": "CogniFusion",
  "version": "1.0.0",
  "icons": {
    "32": "icons/icon-32.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-32.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
